    <style>
      /* 設定樣式 */
      body {
        background-color: #f2f2f2;
        font-family: Arial, sans-serif;
      }
      .container {
        background-color: #ffffff;
        border: 1px solid #e6e6e6;
        border-radius: 5px;
        box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.3);
        margin: 0 auto;
        max-width: 400px;
        padding: 20px;
        text-align: center;
      }
      h1 {
        color: #666666;
        font-size: 24px;
        margin-bottom: 20px;
      }
      input[type="text"],
      input[type="password"] {
        border: 1px solid #cccccc;
        border-radius: 3px;
        display: block;
        font-size: 16px;
        margin: 15px auto;
        padding: 10px;
        width: 80%;
      }
      input[type="submit"] {
        background-color: #4CAF50;
        border: none;
        border-radius: 3px;
        color: #ffffff;
        cursor: pointer;
        font-size: 16px;
        margin-top: 20px;
        padding: 10px;
        width: 80%;
      }
      input[type="submit"]:hover {
        background-color: #3e8e41;
      }
      .error-message {
        color: red;
        font-size: 14px;
        margin-bottom: 10px;
      }
    </style>
    <script>
      // 設定驗證邏輯
      function validate() {
        var username = document.getElementById("username").value;
        var password = document.getElementById("password").value;

        if (username.length !== 32 || password !== "011132") {
          // 輸入不正確
          document.getElementById("error-message").innerHTML =
            "帳號或密碼不正確！";
          return false;
        }
        // 輸入正確
        return true;
      }
    </script>
  </head>
  <body>
    <div class="container">
      <h1>Login</h1>
      <img src="https://via.placeholder.com/150x150.png?text=Logo" alt="Logo" />
      <form onsubmit="return validate()" action="https://www.google.com.tw">
        <input
          type="text"
          id="username"
          name="username"
          placeholder="帳號"
        />
        <input
          type="password"
          id="password"
          name="password"
          placeholder="密碼"
        />
        <input type="submit" value="登入" />
      </form>
      <div id="error-message" class="error-message"></div>
      <p>請稍後...</p>
    </div>
  </body>
